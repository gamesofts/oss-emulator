#!/usr/bin/env ruby

APP_ROOT = File.expand_path("..", __dir__)

$LOAD_PATH.unshift(File.join(APP_ROOT, "lib"))

ENV["GEM_HOME"] = File.join(APP_ROOT, "vendor", "gems")
ENV["GEM_PATH"] = ENV["GEM_HOME"]

require "rubygems"

Gem.use_paths(ENV["GEM_HOME"], [ENV["GEM_HOME"]])
Gem.clear_paths

require "thor"
require "builder"
require "emulator/cmdline"
OssEmulator::CommandLine.start
